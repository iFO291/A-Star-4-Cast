<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:layout_height="wrap_content">
            <solid android:color="@android:color/black"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="100%"
                android:centerX="0.1"
                android:centerY="0.1"
                android:startColor="#F43636"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="sweep"
                android:centerX="0.3"
                android:centerY="0.1"
                android:startColor="@color/black"
                android:centerColor="@android:color/transparent"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="80%"
                android:centerX="0.8"
                android:centerY="0.5"
                android:startColor="#F8AE19"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="60%"
                android:centerX="0.8"
                android:centerY="0.1"
                android:startColor="#8BC34A"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="66"
            android:toDegrees="0"
            android:pivotY="30%"
            android:pivotX="50%">
            <shape>
                <gradient
                    android:type="sweep"
                    android:centerX="0.3"
                    android:centerY="0.5"
                    android:startColor="#FF5722"
                    android:centerColor="@android:color/transparent"
                    android:endColor="@android:color/transparent"/>
            </shape>
        </rotate>
    </item>
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="80%"
                android:centerX="0.2"
                android:centerY="0.8"
                android:startColor="@color/teal_700"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="70%"
                android:centerX="0.7"
                android:centerY="0.90"
                android:startColor="#FF5722"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="sweep"
                android:centerX="0.6"
                android:centerY="0.7"
                android:startColor="#8BFF8800"
                android:centerColor="@android:color/transparent"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>
    <item>
        <rotate android:fromDegrees="280"
            android:toDegrees="0"
            android:pivotY="50%"
            android:pivotX="30%">
            <shape>
                <gradient
                    android:type="sweep"
                    android:centerX="0.6"
                    android:centerY="0.7"
                    android:startColor="@android:color/holo_orange_dark"
                    android:centerColor="@android:color/transparent"
                    android:endColor="@android:color/transparent"/>
            </shape>
        </rotate>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#81144C47"
                android:centerColor="#A8000000"
                android:endColor="#4B00BCD4"
                android:type="sweep">
            </gradient>
        </shape>
    </item>
    <item>
        <rotate android:fromDegrees="345"
            android:toDegrees="0"
            android:pivotY="20%"
            android:pivotX="20%">
            <shape>
                <gradient
                    android:type="sweep"
                    android:centerX="0.8"
                    android:centerY="0.7"
                    android:startColor="@android:color/holo_green_dark"
                    android:centerColor="@android:color/transparent"
                    android:endColor="@android:color/transparent"/>
            </shape>
        </rotate>
    </item>

</layer-list>